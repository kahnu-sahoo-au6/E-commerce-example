{{>header}}
<style>
  body {
    background-image: url('images/register.jpg');
    background-size: auto;
  }

  .cstr {
    width: 300px;
    margin-left: 400px;
    margin-top: 50px;
    color: chartreuse;
  }
</style>
<form class="cstr" action="/submit" method="POST">
<h1>Sign Up Now !</h1>
    <div class="form-group">
    <label for="exampleInput">Name</label>
    <input type="name" name="name" class="form-control" id="exampleInput" placeholder="Enter your name">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your E-mail">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" name="pass" class="form-control" id="exampleInputPassword1" placeholder="Enter a password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>


  <p>If You are a user <a href="./login">Log-In </a></p>
</form>
